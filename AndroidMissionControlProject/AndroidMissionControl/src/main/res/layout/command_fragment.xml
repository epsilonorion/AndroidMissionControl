<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/command_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnSendWaypoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Mission" />

        <Button
            android:id="@+id/btnStartMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Mission" />

        <Button
            android:id="@+id/btnPauseMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pause Mission" />

        <Button
            android:id="@+id/btnHaltMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halt Mission" />

        <Button
            android:id="@+id/btnReturnToBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Base" />

        <Button
            android:id="@+id/btnLaunchLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Vehicle" />
    </LinearLayout>

</ScrollView>
