<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblVehicleNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Name: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/VehicleNameSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblLatitudeStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Latitude: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblLatitudeStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />

        <TextView
            android:id="@+id/lblLongitudeStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Longitude: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblLongitudeStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblAltitudeStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Altitude: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblAltitudeStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />

        <TextView
            android:id="@+id/lblHeadingStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Heading: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblHeadingStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblSpeedStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Speed: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblSpeedStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblPanAngleStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Pan Angle: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPanAngleStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />

        <TextView
            android:id="@+id/lblTiltAngleStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Tilt Angle: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblTiltAngleStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblBatteryStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Battery: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblBatteryStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPSStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="GPS Stat: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblGPStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblCurrWaypointStatus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="CurrWaypt: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCurrWaypointStatusValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />


        <TextView
            android:id="@+id/lblCurrWaypointDistance"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Dist To: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCurrWaypointDistanceValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblState"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="State: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblStateValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="" />

    </LinearLayout>

</LinearLayout>
